{
  "manifest_version": 2,

  "name": "Copy Link With Title",
  "description": "This extension copies the current tab's link and title, formatted into Markdown, HTML, or a custom format.",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
